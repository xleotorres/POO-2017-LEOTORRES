package model;

public class Funcionario {

	public String nome;
	public double salario;
	public String departamento;
	public String data;
	public String RG;
	
	public void recebeAumento (double aumento) {
		salario = salario + aumento;
	}
	
	public double calculaGanhoanual() {
		return salario*12;
	}
	
	
}
